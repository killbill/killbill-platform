    <build>
        <resources>
            <resource>
                <filtering>true</filtering>
                <directory>${basedir}/src/main/resources</directory>
                <excludes>
                    <exclude>org/killbill/billing/server/ddl.sql</exclude>
                    <exclude>org/killbill/billing/server/version.properties</exclude>
                    <exclude>update-checker/killbill-server-update-list.properties</exclude>
                </excludes>
            </resource>
        </resources>
        <plugins>
            <plugin>
                <groupId>org.eclipse.jetty</groupId>
                <artifactId>jetty-maven-plugin</artifactId>
                <configuration>
                    <webAppSourceDirectory>${basedir}/src/main/webapp</webAppSourceDirectory>
                    <systemProperties>
                        <logback.configurationFile>file:${basedir}/src/main/webapp/logback.xml</logback.configurationFile>
                        <org.killbill.dao.seedFile>file:${basedir}/src/main/resources/org/killbill/billing/server/ddl.sql</org.killbill.dao.seedFile>
                        <org.killbill.server.updateCheck.skip>true</org.killbill.server.updateCheck.skip>
                    </systemProperties>
                    <scan>2</scan>
                    <scanTargetPatterns>
                        <scanTargetPattern>
                            <directory>/var/tmp/bundles</directory>
                            <includes>
                                <include>**/restart.txt</include>
                            </includes>
                        </scanTargetPattern>
                    </scanTargetPatterns>
                    <contextXml>${basedir}/src/main/jetty/jetty-context.xml</contextXml>
                </configuration>
            </plugin>
        </plugins>
    </build>
